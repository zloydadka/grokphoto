#header
  %h1
    = link_to(h(@config.company_name), root_path, :title => h(@config.company_name))
  %ul.nav
    %li
      = link_to('Galleries', galleries_path, :title => 'Photo Galleries', :class => "#{'active' if controller.controller_name == 'galleries'}")
    - for page in @pages
      - unless @pages.last == page
        %li
          = link_to(h(page.title), page_path(page), :title => h(page.title), :class => "#{'active' if @page and @page.id == page.id}")
      - else
        %li.last
          = link_to(h(page.title), page_path(page), :title => h(page.title), :class => "#{'active' if @page and @page.id == page.id}")